libbase_src_files = [
    "file.cpp",
    "stringprintf.cpp",
]

libbase_test_src_files = [
    "file_test.cpp",
    "stringprintf_test.cpp",
]

libbase_cppflags = [
    "-Wall",
    "-Wextra",
    "-Werror",
]

cc_library {
    name: "libbase",
    host_supported: true,
    clang: true,
    srcs: libbase_src_files,
    local_include_dirs: ["include"],
    cppflags: libbase_cppflags,
    export_include_dirs: ["include"],
    shared_libs: ["liblog"],
}

cc_test {
    name: "libbase_test",
    host_supported: true,
    clang: true,
    srcs: libbase_test_src_files,
    cppflags: libbase_cppflags,
    shared_libs: ["libbase"],
    compile_multilib: "both",
    multilib: {
        lib32: {
            suffix: "32",
        },
        lib64: {
            suffix: "64",
        },
    },
}
